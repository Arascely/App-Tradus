@page
@model TradusApp.Pages.Chapters.DetailsModel
@{
    ViewData["Title"] = "Detalle de Capítulo";
}

<style>
    :root {
        --primary: #6d5dfc;
        --primary2: #5a4de8;
        --primary-light: #f3f0ff;
        --text-dark: #1a202c;
        --text-mid: #4a5568;
        --border: #d8d8f0;
    }

    .page-wrap { max-width:1200px; margin:0 auto; padding:1.5rem; }

    /* ---------------- HEADER ---------------- */
    .header-section {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom:2rem;
        border-bottom:3px solid var(--primary);
        padding-bottom: .8rem;
    }

        .header-section h1 {
            font-size:2rem;
            font-weight:800;
            color: var(--text-dark);
            letter-spacing: -0.5px;
            margin:0;
        }

    /* ---------------- CARDS ---------------- */
    .card {
        background: #ffffff;
        border:1px solid var(--border);
        border-radius:16px;
        padding:1.6rem;
        margin-bottom:1.5rem;
        box-shadow: 0 8px 20px rgba(109,93,252,0.08);
        transition:0.25s ease;
    }

        .card:hover {
            box-shadow: 0 12px 28px rgba(109,93,252,0.12);
        }

    .section-title {
        font-size:1.15rem;
        font-weight:700;
        color: var(--text-dark);
        margin-bottom:1rem;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

    /* Badge */
    .badge {
        display: inline-block;
        padding: .28rem .65rem;
        font-size: .75rem;
        border-radius:6px;
        background: var(--primary-light);
        color: var(--primary);
        font-weight:600;
    }

    /* ---------------- CONTENT ---------------- */
    .content-article {
        white-space: pre-line;
        font-size:1.02rem;
        line-height:1.62;
        color: var(--text-mid);
    }

    /* ---------------- COMMENTS ---------------- */
    .comment-item {
        background: var(--primary-light);
        border-left:4px solid var(--primary);
        padding: .8rem1rem;
        border-radius:10px;
        margin-bottom: .8rem;
    }

    .comment-author {
        font-weight:700;
        color: var(--primary2);
        margin-bottom: .2rem;
        font-size: .9rem;
    }

    .comment-text {
        color: var(--text-mid);
        font-size: .95rem;
    }

    /* ---------------- FORM ---------------- */
    .form-input,
    .comment-form textarea,
    .search-input {
        width:100%;
        padding: .7rem .9rem;
        border:1px solid var(--border);
        border-radius:10px;
        font-size: .95rem;
        transition: .2s border-color;
        background: #fff;
    }

        .form-input:focus,
        textarea:focus {
            border-color: var(--primary);
            box-shadow:0002px rgba(109,93,252, .2);
            outline: none;
        }

    .search-group {
        display: flex;
        gap: .6rem;
        margin-bottom:1rem;
    }

    /* ---------------- BUTTONS ---------------- */
    .btn {
        padding: .65rem1.2rem;
        border-radius:10px;
        font-weight:600;
        border: none;
        cursor: pointer;
        font-size: .9rem;
        transition: .2s;
    }

    .btn-primary {
        background: var(--primary);
        color: #fff;
    }

        .btn-primary:hover {
            background: var(--primary2);
        }

    .btn-secondary {
        background: var(--primary-light);
        color: var(--primary);
    }

        .btn-secondary:hover {
            background: #e8e4ff;
        }

    /* ---------------- GRID ---------------- */
    .grid-2 {
        display: grid;
        grid-template-columns:1fr1fr;
        gap:1.3rem;
    }

    .table-responsive {
        max-height:300px;
        overflow: auto;
    }

    .comment-card {
        background: #fff;
        border:1px solid var(--border);
        border-radius:10px;
        padding: .8rem1rem;
        margin-bottom: .8rem;
    }

    .comment-header {
        display:flex;
        justify-content: space-between;
        font-weight:600;
        color: var(--text-dark);
    }

    .comment-body {
        color: var(--text-mid);
        margin-top: .35rem;
    }

    .version-card {
        background:#fff;
        border:1px solid var(--border);
        border-radius:10px;
        padding:.7rem .9rem;
        margin-bottom:.6rem;
    }

    .version-header {
        display:flex;
        justify-content:space-between;
        font-weight:600;
        color:var(--text-dark);
    }

    .version-number {
        color:var(--primary2);
    }

    .version-notes {
        color:var(--text-mid);
        margin-top:.35rem;
    }
</style>



<div class="page-wrap">

    <!-- ENCABEZADO -->
    <div class="header-section">
        <h1>Capítulo @Model.ViewModel.Chapter.Numero — @Model.ViewModel.Chapter.Titulo</h1>

        <a class="btn btn-secondary"
           asp-page="/Chapters/Edit"
           asp-route-id="@Model.ViewModel.Chapter.Id">
            Editar
        </a>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="card">
        <div class="section-title">Versión actual: @Model.ViewModel.Chapter.VersionActual</div>

        <article class="content-article">
            @Model.ViewModel.Chapter.Contenido
        </article>
    </div>

    <!-- DOS COLUMNAS -->
    <div class="grid-2">

        <!-- HISTORIAL DE VERSIONES -->
        <div class="card">
            <div class="section-title">Historial de versiones</div>

            <div class="version-list">
                @foreach (var v in Model.ViewModel.Chapter.Versions)
                {
                    <div class="version-card">
                        <div class="version-header">
                            <span class="version-number">Versión @v.Version</span>
                            <span class="version-date">@v.Fecha.ToString("dd/MM/yyyy hh:mm tt")</span>
                        </div>
                        <div class="version-notes">@v.Notas</div>
                    </div>
                }
            </div>

        </div>

        <!-- COMENTARIOS -->
        <div class="card">
            <div class="section-title">Comentarios</div>

            <!-- TABLA DE COMENTARIOS -->
            <div class="table-responsive">
                <div class="comment-list">
                    @foreach (var c in Model.ViewModel.Comments)
                    {
                        var isEditing = Model.EditingCommentId == c.Id;
                        <div class="comment-card">
                            <div class="comment-header">
                                <span class="comment-author">@c.Autor</span>
                                <span class="comment-date">@c.Fecha.ToString("dd/MM/yyyy hh:mm tt")</span>
                                <div style="display:flex; gap:.4rem;">
                                    <form method="post" asp-page-handler="StartEdit" style="margin:0;">
                                        <input type="hidden" name="CommentId" value="@c.Id" />
                                        <button type="submit" class="btn btn-secondary" style="padding:.25rem .5rem; font-size:.75rem;">
                                            Editar
                                        </button>
                                    </form>
                                    <form method="post" asp-page-handler="DeleteComment" style="margin:0;">
                                        <input type="hidden" name="CommentId" value="@c.Id" />
                                        <button type="submit" class="btn btn-primary" style="padding:.25rem .5rem; background:#ff4d4d; font-size:.75rem;">
                                            Eliminar
                                        </button>
                                    </form>
                                </div>
                            </div>
                            @if (!isEditing)
                            {
                                <div class="comment-body">@c.Contenido</div>
                            }
                            else
                            {
                                <form method="post" asp-page-handler="SaveEdit" style="margin-top:.6rem;">
                                    <input type="hidden" name="CommentId" value="@c.Id" />
                                    <input type="text" name="Autor" class="form-input" value="@c.Autor" />
                                    <textarea name="Contenido" rows="3" class="form-input" style="margin-top:.5rem;">@c.Contenido</textarea>
                                    <div style="display:flex; gap:.5rem; margin-top:.5rem;">
                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                        <form method="post" asp-page-handler="CancelEdit" style="margin:0;">
                                            <button type="submit" class="btn btn-secondary">Cancelar</button>
                                        </form>
                                    </div>
                                </form>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- FORMULARIO NUEVO COMENTARIO -->
            <form method="post" asp-page-handler="AddComment" class="comment-form" style="margin-top:1rem;">
                <input type="hidden" asp-for="NewComment.CapituloId" />

                <div class="mb-2">
                    <input asp-for="NewComment.Autor" class="form-input" placeholder="Tu nombre" />
                    <span asp-validation-for="NewComment.Autor" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <textarea asp-for="NewComment.Contenido" rows="3" placeholder="Escribe un comentario"></textarea>
                    <span asp-validation-for="NewComment.Contenido" class="text-danger"></span>
                </div>

                <button class="btn btn-primary" type="submit">Comentar</button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
