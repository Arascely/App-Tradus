@page
@model TradusApp.Pages.Books.ManageModel
@{
    ViewData["Title"] = "Gestión de Traducciones";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary: #8B5FBF;
        --primary2: #6C8CD5;
        --soft-border: #e5e7eb;
    }

    .page-wrap {
        font-family: 'Montserrat',sans-serif;
        background: #ffffff;
        color: #333;
        line-height: 1.6;
    }

    .header-banner {
        background: linear-gradient(135deg,var(--primary),var(--primary2));
        color: #fff;
        padding: 3rem 0;
        margin-bottom: 2rem;
    }

    .container-custom {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .header-content {
        text-align: center;
    }

    .logo {
        font-family: 'Playfair Display',serif;
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: .5rem;
    }

    .tagline {
        font-size: 1.2rem;
        font-weight: 300;
        opacity: .9;
    }

    .subtagline {
        font-size: 1rem;
        background: rgba(255,255,255,.2);
        padding: .8rem 1.5rem;
        border-radius: 10px;
        max-width: 600px;
        margin: 1rem auto 0;
    }

    .content-wrapper {
        display: grid;
        grid-template-columns: 1fr 2fr;
        gap: 2rem;
    }

    /* Sección izquierda */
    .book-list-section {
        background: #fff;
        border: 1px solid var(--soft-border);
        padding: 1.5rem;
        border-radius: 12px;
        height: 700px;
        overflow-y: auto;
    }

    .section-title {
        font-size: 1.4rem;
        margin-bottom: 1rem;
        border-bottom: 2px solid var(--primary);
        padding-bottom: .3rem;
    }

    .book-item {
        border: 1px solid var(--soft-border);
        padding: 1rem;
        margin-bottom: .8rem;
        border-radius: 10px;
        transition: .2s;
    }

        .book-item:hover {
            background: #f4f0ff;
            cursor: pointer;
        }

        .book-item.active {
            background: #f8f7ff;
            border-left: 4px solid var(--primary);
        }

    .book-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .book-meta {
        display: flex;
        justify-content: space-between;
        margin-top: .5rem;
        font-size: .9rem;
    }

    .stats-badge {
        background: linear-gradient(135deg,var(--primary),var(--primary2));
        color: #fff;
        padding: .2rem .7rem;
        font-size: .8rem;
        border-radius: 20px;
    }

    /* Sección derecha */
    .book-details-section {
        background: #fff;
        border: 1px solid var(--soft-border);
        padding: 1.5rem;
        border-radius: 12px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-weight: 600;
        display: block;
        margin-bottom: .3rem;
    }

    .form-input, .form-textarea {
        width: 100%;
        padding: .6rem;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 1rem;
    }

    .form-textarea {
        min-height: 120px;
        resize: vertical;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .btn {
        padding: .6rem 1.1rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-primary {
        background: var(--primary);
        color: #fff;
    }

    .btn-danger {
        background: #d9534f;
        color: #fff;
    }

    .btn-secondary {
        background: #e5e7eb;
    }

    /* Capítulos */
    .chapters-section {
        margin-top: 2rem;
    }

    .chapter-item {
        border: 1px solid var(--soft-border);
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1rem;
    }

    .chapter-header {
        display: flex;
        justify-content: space-between;
        font-weight: 600;
    }

    .chapter-title {
        font-size: 1rem;
    }
</style>

<div class="page-wrap">
    <div class="header-banner">
        <div class="container-custom">
            <div class="header-content">
                <h1 class="logo">TradusApp</h1>
                <p class="tagline">Plataforma de Traducciones Colaborativas</p>
                <p class="subtagline">Comparte y lee traducciones de obras de dominio público o con licencia libre.</p>
            </div>
        </div>
    </div>

    <div class="container-custom">
        <div class="content-wrapper">

            <!-- LISTA DE LIBROS -->
            <div class="book-list-section">
                <h2 class="section-title">Mis Traducciones</h2>
                @foreach (var b in Model.BookList)
                {
                    var active = Model.Book?.Id == b.Id ? "active" : string.Empty;
                    <div class="book-item @active">
                        <a class="text-decoration-none" href="@Url.Page("/Books/Manage", new { id = b.Id })" style="width:100%; color:inherit;">
                            <div class="book-title">@b.Titulo</div>
                            <div class="book-meta">
                                <span>@b.Autor</span>
                                <span class="stats-badge">@b.Capitulos capítulos</span>
                            </div>
                        </a>
                    </div>
                }

                <!-- FORM NUEVO LIBRO -->
                <form method="post" asp-page-handler="CreateBook" style="margin-top:1rem; border:1px dashed #ccc; padding:1rem; border-radius:10px;">
                    @Html.AntiForgeryToken()
                    <h4 style="margin-bottom:.8rem;">+ Nueva Traducción</h4>
                    <div class="form-group">
                        <input class="form-input" name="NewBook.Titulo" placeholder="Título" />
                        <span class="text-danger" asp-validation-for="NewBook.Titulo"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-input" name="NewBook.Autor" placeholder="Autor" />
                        <span class="text-danger" asp-validation-for="NewBook.Autor"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-input" name="NewBook.Idioma" placeholder="Idioma" />
                        <span class="text-danger" asp-validation-for="NewBook.Idioma"></span>
                    </div>
                    <div class="form-group">
                        <textarea class="form-textarea" name="NewBook.Descripcion" placeholder="Descripción"></textarea>
                    </div>
                    <button type="submit" class="btn btn-secondary" style="width:100%;">Crear Libro</button>
                </form>
            </div>

            <!-- DETALLES DEL LIBRO -->
            <div class="book-details-section">
                <h2 class="section-title">Gestionar Traducción</h2>

                @if (Model.Book is null)
                {
                    <div style="text-align:center; padding:2rem; opacity:.7;">
                        <div style="font-size:3rem;">📚</div>
                        <p>Selecciona un libro de la lista o crea uno nuevo.</p>
                    </div>
                }
                else
                {
                    <!-- FORMULARIO DE EDICIÓN DEL LIBRO -->
                    <form method="post" asp-page-handler="UpdateBook">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Book.Id" value="@Model.Book.Id" />

                        <div class="form-group">
                            <label class="form-label">Título de la Obra</label>
                            <input class="form-input" name="Book.Titulo" value="@Model.Book.Titulo" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Autor Original</label>
                            <input class="form-input" name="Book.Autor" value="@Model.Book.Autor" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Idioma Original</label>
                            <input class="form-input" name="Book.Idioma" value="@Model.Book.Idioma" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">Descripción</label>
                            <textarea class="form-textarea" name="Book.Descripcion">@Model.Book.Descripcion</textarea>
                        </div>

                        <div class="action-buttons">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>

                    <!-- ELIMINAR LIBRO -->
                    <form method="post" asp-page-handler="DeleteBook" onsubmit="return confirm('¿Eliminar libro y su contenido?');" style="margin-top:1rem;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Book.Id" value="@Model.Book.Id" />
                        <button type="submit" class="btn btn-danger">Eliminar Traducción</button>
                    </form>

                    <!-- LISTA DE CAPÍTULOS -->
                    <div class="chapters-section">
                        <h3 class="section-title">Capítulos</h3>
                        @foreach (var c in Model.Book.Capitulos)
                        {
                            <div class="chapter-item">
                                <div class="chapter-header">
                                    <span class="chapter-title">@c.Titulo</span>
                                    <span>Cap. @c.Numero</span>
                                </div>
                                <div style="font-size:.9rem; margin-top:.5rem;">Versión: @c.VersionActual</div>
                                <div class="action-buttons" style="margin-top:1rem;">
                                    <a class="btn btn-secondary" asp-page="/Chapters/Details" asp-route-id="@c.Id">Abrir</a>
                                    <a class="btn btn-secondary" asp-page="/Chapters/Edit" asp-route-id="@c.Id">Editar</a>
                                </div>
                            </div>
                        }

                        <!-- CREAR NUEVO CAPÍTULO -->
                        <form method="post" asp-page-handler="CreateChapter" style="margin-top:1rem;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Book.NewChapter.LibroId" value="@Model.Book.Id" />

                            <div class="form-group">
                                <label class="form-label">Número</label>
                                <input class="form-input" name="Book.NewChapter.Numero" placeholder="#" />
                            </div>
                            <div class="form-group">
                                <label class="form-label">Título del capítulo</label>
                                <input class="form-input" name="Book.NewChapter.Titulo" placeholder="Título del capítulo" />
                            </div>
                            <div class="form-group">
                                <label class="form-label">Contenido</label>
                                <textarea class="form-textarea" name="Book.NewChapter.Contenido" placeholder="Contenido..."></textarea>
                            </div>
                            <button class="btn btn-secondary" type="submit">+ Agregar Nuevo Capítulo</button>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
