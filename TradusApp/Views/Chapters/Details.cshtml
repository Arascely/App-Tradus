@model TradusApp.Models.Chapters.ChapterDetailsPageViewModel
@{
    ViewData["Title"] = "Detalle de Capítulo";
}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Capítulo @Model.Chapter.Numero - @Model.Chapter.Titulo</h1>
        <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@Model.Chapter.Id">Editar</a>
    </div>
    <div class="mb-4">
        <h5>Versión actual: @Model.Chapter.VersionActual</h5>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <h4>Contenido</h4>
            <article class="border rounded p-3 bg-light">
                @Html.Raw(Model.Chapter.Contenido?.Replace("\n", "<br />"))
            </article>
        </div>
        <div class="col-lg-4">
            <h4>Historial de versiones</h4>
            @await Html.PartialAsync("_ChapterTable", Model.Chapter.Versions)

            <h4 class="mt-4">Comentarios</h4>
            <form asp-action="Details" method="get" class="mb-2">
                <input type="hidden" name="id" value="@Model.Chapter.Id" />
                <div class="input-group">
                    <input name="search" value="@Model.Search" placeholder="Buscar..." class="form-control" />
                    <button class="btn btn-outline-primary" type="submit">Buscar</button>
                </div>
            </form>

            @await Html.PartialAsync("_CommentTable", Model.Comments)

            <form asp-action="AddComment" method="post" class="mt-3">
                <input type="hidden" name="CapituloId" value="@Model.Chapter.Id" />
                <div class="row g-2">
                    <div class="col-12">
                        <input name="Autor" class="form-control" placeholder="Tu nombre" required />
                    </div>
                    <div class="col-12">
                        <textarea name="Contenido" class="form-control" rows="3" placeholder="Escribe un comentario" required></textarea>
                    </div>
                </div>
                <button class="btn btn-primary mt-2" type="submit">Comentar</button>
            </form>
        </div>
    </div>
</div>
